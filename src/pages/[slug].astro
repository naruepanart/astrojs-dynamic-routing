// SSR
const res = await fetch(`http://localhost:3000/api/posts/${Astro.params.slug}`);
const post = await res.json();

function isEmpty(obj: any) {
  return Object.keys(obj).length === 0;
}
if (isEmpty(post)) {
  return Astro.redirect("/404");
}
---

<Layout title={post.title}>
  <h1>{post.title}</h1>
  <p>{post.body}</p>
</Layout>
